<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/advance_forward_actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#527da3"

        >
<ImageView
    android:layout_marginLeft="5dp"
    android:id="@+id/closedialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerHorizontal="true"
    android:src="@drawable/ic_close_white"
    android:layout_alignTop="@+id/advance_forward_send" />
        <TextView
            android:id="@+id/forwardtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/advanceforward"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/advance_forward_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_done" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">

        <EditText
            android:backgroundTint="#ffffff"
            android:id="@+id/edt_forwardmessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/MessageText"
            android:textAlignment="center" />
    </LinearLayout>


</LinearLayout>